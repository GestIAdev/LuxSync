# LuxSync Environment Variables

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# DMX Configuration
DMX_INTERFACE=tornado
DMX_PORT=/dev/ttyUSB0
DMX_UNIVERSES=1

# Audio Configuration
AUDIO_INPUT_DEVICE=default
AUDIO_SAMPLE_RATE=44100
AUDIO_BUFFER_SIZE=2048

# Server Configuration
SERVER_PORT=4000
SERVER_HOST=localhost

# GraphQL Configuration
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

# LuxSync Configuration
LUXSYNC_MODE=development
LUXSYNC_LOG_LEVEL=debug
LUXSYNC_SEED=42

# Fixture Configuration
FIXTURES_PATH=./fixtures
FIXTURES_RELOAD_ON_CHANGE=true

# Show Recording
SHOWS_PATH=./shows
SHOWS_AUTO_RECORD=false
