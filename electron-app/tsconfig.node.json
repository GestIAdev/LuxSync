{
  "compilerOptions": {
    "composite": false,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "outDir": "./dist-electron-backend",
    "target": "ES2020",
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "vite.config.ts", 
    "electron/**/*.ts",
    "src/main/**/*.ts",
    "src/types/**/*.ts",
    "src/core/**/*.ts",
    "src/brain/**/*.ts",
    "src/engine/**/*.ts",
    "src/engines/**/*.ts",
    "src/hal/**/*.ts",
    "src/workers/**/*.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "src/stores/**/*.ts",
    "src/components/**/*.tsx",
    "src/hooks/**/*.ts",
    "**/__tests__/**"
  ]
}
