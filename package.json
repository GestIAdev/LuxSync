{
  "name": "luxsync",
  "version": "0.1.0",
  "description": "Sistema de sincronización automática música-iluminación DMX usando Selene AI",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "demo:lights": "tsx src/demo-virtual-lights.ts",
    "demo:audio": "tsx src/demo-audio-lights.ts",
    "demo:manual": "tsx src/demo-manual-control.ts",
    "demo:selene": "tsx src/demo-selene-ai.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "dmx",
    "lighting",
    "music",
    "ai",
    "selene",
    "audio-reactive",
    "automation"
  ],
  "author": "GestIAdev (Raúl + Copilot + GeminiPunk)",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "artnet": "^1.4.0",
    "graphql": "^16.9.0",
    "graphql-ws": "^5.16.0",
    "ioredis": "^5.4.1",
    "meyda": "^5.6.0",
    "redis": "^4.7.0",
    "serialport": "^12.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/dom-mediacapture-record": "^1.0.22",
    "@types/node": "^20.14.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.7",
    "tsx": "^4.16.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
